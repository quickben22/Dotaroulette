@model IList<WebApplication5.Models.MemberAlert>

@if ((Model != null) && (Model.Count != 0))
{
    <table class="tblAllBorders">
        <tr>
            <th>
                Alerts (@Html.ActionLink("Show All", "Index", "Alert", new { id = 0, v = 1 }, null))
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    <ul class="bullet-arrow">
                        <li>
                            @Html.Raw(item.Message)
                        </li>

                    </ul>
                </td>
                <td>
                    @if (item.Ishidden == 0)
                    {
                           <a href="@Url.Action("Hide","Alert",new { id = item.Id, rUrl = (int)1 })" class="btn btn-sm btn-warning" >
        <span class="glyphicon glyphicon-eye-close"></span> 
    </a>
                     
                    }
                    else
                    {
                            <a href="@Url.Action("Hide","Alert",new { id = item.Id, rUrl = (int)1 })" class="btn btn-sm btn-success" >
        <span class="glyphicon glyphicon-eye-open"></span> 
    </a>
                       
                    }
                    <a href="@Url.Action("Delete","Alert",new { id = item.Id, rUrl = (int)1 })" class="btn btn-sm btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>

                   
                </td>
            </tr>
        }
    </table>
}



