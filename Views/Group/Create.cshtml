@model WebApplication5.Models.MemberGroups
<h2>Create a Team</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Create", "Group",null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true)
               
                 

                    <div class="form-group">
                        @Html.Hidden("OwnerId", Model.OwnerId)
                        @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">

                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control",  @style = "Height:20px"  })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.Url, "Acronym ",new { @class = "col-md-2 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Url, new { @class = "form-control",  @style = "Height:20px"  })
                            @Html.ValidationMessageFor(model => model.Url)
                        </div>
                    </div>
                
                 <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="glyphicon glyphicon-plus"></i>Create
                        </button>
                    
                    </div>
                </div>
                  
                
            }
        </section>
    </div>
</div>